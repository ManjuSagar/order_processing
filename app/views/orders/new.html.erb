
<div class="container">
<h5 class="centered"> <%= "Provide the address to ship the #{current_user.order_count(current_user)} items" %></h5>
  <%= form_for(@order) do |f| %>
      <% if @order.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@order.errors.count, "error") %> prohibited this product from being saved:</h2>

            <ul>
              <% @order.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>


      <div>
        <%=f.label :address %>
        <%=f.text_area :address %>
      </div>

      <div>
        <%=f.label :phone_number %>
        <%=f.text_field :phone_number %>
      </div>

      <div>
        <%=f.label :pin_code %>
        <%=f.text_field :pin_code %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>
  <% end %>

</div>